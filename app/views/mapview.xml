<Alloy>
	<Window class='container' id="mapWindow">
		<View platform="ios" layout="vertical">
			<!-- Tags for iOS -->
			<Toolbar id="mapToolbar" ns="Ti.UI.iOS">
				<Items>
					<Button id="btnLogout">
					<FlexSpace/>
					<Label id="lblTitle" text="Piglet" />
					<FlexSpace/>
					<Button id="btnAdd">
				</Items>
			</Toolbar>
			<View id="mapView" ns="Ti.Map" platform="ios"/>
		</View>

		<View platform="android" layout="vertical">
			<!-- Tags for Android -->
			<View id="mapToolbar" height="80dp" width=Ti.UI.FILL/>
			<View id="mapView" ns="Alloy.Globals.Map" method="createView" />
		</View>
	</Window>
</Alloy>
