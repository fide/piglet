<Alloy>
	<Window class="container">
		<Label id="appName" top="10%" height=Ti.UI.SIZE>Piglet</Label>
		<View layout="vertical" top="20%" height=Ti.UI.SIZE>
			<TextField id="username" top="20dp" hintText="Username"/>
			<TextField id="password" hintText="Password" passwordMask=true top="3dp"/>
			<TextField id="confirm" hintText="Password Confirm" passwordMask=true height=0 top="1dp"/>
			<Button class="buttonOK" id="tapper" title="Log in" top="15dp"/>
			<Label id='labelAction' height=Ti.UI.SIZE top='15dp'>Create New Account?</Label>
		</View>
	</Window>
</Alloy>